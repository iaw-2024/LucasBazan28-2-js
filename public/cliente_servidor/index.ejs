<!DOCTYPE html>
<html lang="es">
    <head>
        <meta http-equiv=”Content-Type” content=”text/html; charset=UTF-8″ />
        <title>Copas del Club Atlético River Plate</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
        <link rel="stylesheet" type="text/css" href="/style.css">
    </head>
    <body>
        <div id="titulo">
            <h1>Copas de River</h1>
        </div>

        <div class="container-fluid full-width">
            <div class="row gx-0">
                <div class="col-6">
                    <a href="/cliente_servidor/nacionales" class="btn btn-outline-primary btn-block">Nacionales</a>
                </div>
                <div class="col-6">
                    <a href="/cliente_servidor/internacionales" class="btn btn-outline-primary btn-block">Internacionales</a>
                </div>
                <!--Cuando clickeo estos botones me manda a /express/nacionales o /express/internacionales-->
            </div>
        </div>    
        <br>

        <div class="container-fluid" id="Copas">   
            <% if (tabla === 'nacionales') { %>
                <table id="tablaNacionales">
                  <% nacionales.forEach(objeto => { %>
                    <tr>
                      <% for (let propiedad in objeto) { %>
                        <td><%= objeto[propiedad] %></td>
                      <% } %>
                    </tr>
                  <% }); %>
                </table>
              <% } else if (tabla === 'internacionales') { %>
                <table id="tablaInternacionales">
                  <% internacionales.forEach(objeto => { %>
                    <tr>
                      <% for (let propiedad in objeto) { %>
                        <td><%= objeto[propiedad] %></td>
                      <% } %>
                    </tr>
                  <% }); %>
                </table>
              <% } else { %>
                <img src="https://i.pinimg.com/564x/de/e5/8f/dee58fbf03b3e4e0d697bae497f7520b.jpg" class="img-fluid center-image" alt="Escudo River Plate 1986">
              <% } %>
              
        </div>
        <br>

        <div class="col-12">
          <a href="/cliente_servidor" class="btn btn-outline-primary btn-block">Volver a inicio</a>
      </div>
    </body>
</html>
